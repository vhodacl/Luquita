<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_onPrimary"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:title="Luquita"
            app:titleTextColor="@color/md_theme_brownie"
            app:titleCentered="true"
            android:textAlignment="center"
            android:textStyle="bold" /> <!-- Aquí está la propiedad para poner el título en negrita -->
    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <!-- Card Simple sin ImageView -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSimple"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="96dp"
            app:cardCornerRadius="26dp"
            app:cardBackgroundColor="@color/md_theme_tertiary"
            android:clickable="true"
            android:focusable="true">

            <!-- Aquí puedes agregar el contenido que desees dentro de la tarjeta -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="22dp">

                <TextView
                    android:id="@+id/textCardContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contenido de la tarjeta"
                    android:textColor="@color/md_theme_muted"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Botones para galería y cámara -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp"
            android:layout_alignParentBottom="true"
            android:spacing="16dp">

            <!-- Botón Galería -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/gallery"
                android:layout_width="0dp"
                android:layout_height="77dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/md_theme_tertiary"
                app:strokeWidth="1dp"
                app:strokeColor="#ebe9e7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="25dp"
                        android:src="@drawable/image"
                        app:tint="@color/md_theme_brownie" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Galería"
                        android:textColor="@color/md_theme_brownie"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botón Cámara -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/camera"
                android:layout_width="0dp"
                android:layout_height="77dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/md_theme_tertiary"
                app:strokeWidth="1dp"
                app:strokeColor="#ebe9e7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="25dp"
                        android:src="@drawable/camera"
                        app:tint="@color/md_theme_brownie" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Cámara"
                        android:textColor="@color/md_theme_brownie"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
