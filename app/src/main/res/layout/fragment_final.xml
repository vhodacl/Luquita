<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnStartApp">

        <ImageView
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/handshake"
            android:tint="@color/md_theme_primary"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Ya estás listo!"
            android:textSize="38sp"
            android:textStyle="bold"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txtSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ya puedes iniciar Luquita"
            android:textSize="18sp"
            android:textAlignment="center" />

    </LinearLayout>

    <Button
        android:id="@+id/btnStartApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="17dp"
        android:layout_marginBottom="17dp"
        android:text="Comenzar Luquita"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
