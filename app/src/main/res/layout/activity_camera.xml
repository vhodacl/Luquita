<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:fitsSystemWindows="true"
    android:transitionName="camera_button"
    tools:context=".CameraActivity">

    <TextView
        android:id="@+id/recognizedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto reconocido"
        android:textSize="18sp"
        android:visibility="gone"
        android:layout_margin="16dp"/>



    <!-- Vista previa de la c치mara -->
    <androidx.camera.view.PreviewView
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        app:implementationMode="performance" />

    <!-- Esquinas del marco de escaneo -->
    <!-- Frame Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scan_frame_container"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/corner_top_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/corner_top_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/corner_top_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/corner_top_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/corner_bottom_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/corner_bottom_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:id="@+id/corner_bottom_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/corner_bottom_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Contenedor de botones -->
    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingVertical="96dp"
        android:gravity="center"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent">
        <!-- Bot칩n para ir a ResultActivity -->
        <Button
            android:id="@+id/goToResultButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Resultado"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/resultMessageText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        <!-- Contenedor izquierdo -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4">

            <!-- Bot칩n para la linterna con MaterialCardView -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_flash"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                app:cardCornerRadius="40dp"
                app:cardElevation="0dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#80FFFFFF"
                app:strokeWidth="1dp"
                app:strokeColor="#ebe9e7">

                <ImageView
                    android:id="@+id/btn_flash_icon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/flashlight"
                    android:scaleType="fitCenter"
                    android:contentDescription="Flash"
                    android:layout_gravity="center"
                    android:tint="#fbf9f7" />
            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>

        <!-- Espacio central -->
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3" />

        <!-- Contenedor derecho -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4">

            <!-- Bot칩n para cerrar con MaterialCardView -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_cancel"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                app:cardCornerRadius="40dp"
                app:cardElevation="0dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#80FFFFFF"
                app:strokeWidth="1dp"
                app:strokeColor="#ebe9e7">

                <ImageView
                    android:id="@+id/btn_cancel_icon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/close"
                    android:scaleType="fitCenter"
                    android:contentDescription="Cerrar"
                    android:layout_gravity="center"
                    android:tint="#fbf9f7" />
            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>